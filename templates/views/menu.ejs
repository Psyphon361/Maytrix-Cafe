<%- include("../layouts/header.ejs") %>

<!-- Start All Pages -->
<div class="all-page-title page-breadcrumb">
    <div class="container text-center">
        <div class="row pt-5">
            <div class="col-lg-12">
                <h1>Menu</h1>
            </div>
        </div>
    </div>
</div>
<!-- End All Pages -->

<!-- Start Menu -->
<div class="menu-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="special-menu text-center">
                    <div class="button-group filter-button-group">
                        <% if(foods[0].food_type === "Coffee") { %>
                        <a
                            id="coffee"
                            style="text-decoration: none"
                            href="/menu/coffee"
                            class="menu-btn my-2 active"
                            >Coffee</a
                        >
                        <% } else {%>
                        <a
                            id="coffee"
                            style="text-decoration: none"
                            href="/menu/coffee"
                            class="menu-btn my-2"
                            >Coffee</a
                        >
                        <% } %> <% if(foods[0].food_type === "Tea") { %>
                        <a
                            id="tea"
                            style="text-decoration: none"
                            href="/menu/tea"
                            class="menu-btn my-2 active"
                            >Tea</a
                        >
                        <% } else {%>
                        <a
                            id="tea"
                            style="text-decoration: none"
                            href="/menu/tea"
                            class="menu-btn my-2"
                            >Tea</a
                        >
                        <% } %> <% if(foods[0].food_type === "Smoothies") { %>
                        <a
                            id="smoothies"
                            style="text-decoration: none"
                            href="/menu/smoothies"
                            class="menu-btn my-2 active"
                            >Smoothies</a
                        >
                        <% } else {%>
                        <a
                            id="smoothies"
                            style="text-decoration: none"
                            href="/menu/smoothies"
                            class="menu-btn my-2"
                            >Smoothies</a
                        >
                        <% } %> <% if(foods[0].food_type === "Snacks") { %>
                        <a
                            id="snacks"
                            style="text-decoration: none"
                            href="/menu/snacks"
                            class="menu-btn my-2 active"
                            >Snacks</a
                        >
                        <% } else {%>
                        <a
                            id="snacks"
                            style="text-decoration: none"
                            href="/menu/snacks"
                            class="menu-btn my-2"
                            >Snacks</a
                        >
                        <% } %> <% if(foods[0].food_type === "Indian") { %>
                        <a
                            id="indian"
                            style="text-decoration: none"
                            href="/menu/indian"
                            class="menu-btn my-2 active"
                            >Indian</a
                        >
                        <% } else {%>
                        <a
                            id="indian"
                            style="text-decoration: none"
                            href="/menu/indian"
                            class="menu-btn my-2"
                            >Indian</a
                        >
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <div class="row py-md-4 py-0">
            <% for(var i = 0; i < foods.length; i++) { %>
            <div class="col-lg-4 col-md-6 col-sm-12 py-3 ml-2 ml-lg-0">
                <div class="card menu-item" style="width: 20rem">
                    <img
                        width="200px"
                        class="card-img-top"
                        src="/images/menu/<%= foods[i].food_type %>/<%= foods[i].food_name %>.jpg"
                        alt="Card image cap"
                    />
                    <h5
                        style="font-size: 26px"
                        class="card-title pt-3 text-center"
                    >
                        <%= foods[i].food_name %>
                    </h5>
                    <!-- </div> -->
                    <form method="POST" action="/add-to-cart/<%= foods[i].food_name %>">
                        <ul class="list-group list-group-flush text-center">
                            <li
                                style="
                                    background-color: #ff7171;
                                    color: #fff;
                                    font-weight: 600;
                                "
                                class="list-group-item"
                            >
                                <span>â‚¹<%= foods[i].food_price %>.00</span>
                            </li>
                            <li class="list-group-item">
                                <select
                                    id="inputState"
                                    name="quantity"
                                    class="
                                        form-control
                                        input-field
                                        custom-select
                                    "
                                    required
                                >
                                    <option
                                        class="default-text"
                                        disabled=""
                                        selected=""
                                        hidden=""
                                    >
                                        Quantity
                                    </option>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                </select>
                            </li>
                        </ul>
                        <div class="card-body text-center">
                            <button
                                href="/add-to-cart/<%= foods[i].food_name %>"
                                class="btn btn-primary order-btn"
                                value="submit"
                                >Add to Cart</button
                            >
                            <a
                                href="/order-now/<%= foods[i].food_name %>"
                                class="btn btn-primary order-btn"
                                >Order Now</a
                            >
                        </div>
                    </form>
                </div>
            </div>

            <% } %>
        </div>
    </div>
</div>

<!-- End Menu -->

<%- include("../layouts/footer.ejs") %>
